{
  "permissions": {
    "allow": [
      "mcp__context7__resolve-library-id",
      "mcp__context7__query-docs",
      "Bash(ls:*)",
      "WebSearch",
      "Bash(powershell.exe -Command \"Get-ChildItem -Path ''C:\\\\Program Files\\\\'' -Recurse -Filter ''uv.exe'' -ErrorAction SilentlyContinue | Select-Object -First 1 -ExpandProperty FullName\")",
      "mcp__serena__list_dir",
      "mcp__serena__get_symbols_overview",
      "mcp__supabase__search_docs",
      "mcp__plugin_serena_serena__replace_content",
      "Bash(pnpm dev)",
      "mcp__serena__find_symbol",
      "Bash(git add:*)",
      "Bash(git commit:*)",
      "mcp__plugin_serena_serena__find_symbol",
      "mcp__plugin_serena_serena__activate_project",
      "mcp__plugin_serena_serena__list_dir",
      "Bash(pnpm check:*)",
      "Bash(pnpm build:*)",
      "Bash(cat:*)",
      "Bash(pnpm exec tsc:*)",
      "Bash(pnpm prepare:*)",
      "Bash(type:*)"
    ]
  },
  "enableAllProjectMcpServers": true,
  "enabledMcpjsonServers": ["supabase"],
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "Write|Edit",
        "hooks": [
          {
            "type": "command",
            "command": "pnpm check"
          }
        ]
      }
    ],
    "Notification": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "powershell.exe -Command \"Import-Module BurntToast; New-BurntToastNotification -Text 'Claude Code Notification', '$(cat | jq -r '.message' | sed 's/`/``/g; s/\\\\\\\"/``\\\\\\\"/g')'\""
          }
        ]
      }
    ],
    "Stop": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "powershell.exe -Command \"Import-Module BurntToast; New-BurntToastNotification -Text 'Claude Code', 'タスクが完了しました'\""
          }
        ]
      }
    ]
  }
}
